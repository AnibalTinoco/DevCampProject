<div class="app-card-container">
  <div class="card">
    <h1>About Me</h1>
    
    <hr>
    
    <div class="row">
      <div class="col-md-4">
        
        <%= image_tag "beareddragon.jpg", width: 300, alt: "profile image", class: 'profile-img' %>
      </div>
      
      <div class="col-md-8">
        <p>Private information</p>
        
        <p>
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#jobHistory"
            aria-expanded="false"
            aria-controler="jobHistory"
          >
            Job History
          </button>
          
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#skills"
            aria-expanded="false"
            aria-controler="skills"
          >
            Skills
          </button>
        </p>
        
        <p>
          <div class="collapse" id="jobHistory"> 
          
           <div class="card card-block">
             Job 1
           </div>
           
           <div class="card card-block">
             Job 2
           </div>
          </div>
           
          <div class="collapse" id="skills"> 
          
           <div class="card card-block">
             Skill 1
           </div>
           
           <div class="card card-block">
             Skill 2
           </div>
           
           <div class="card card-block">
             Skill 3
           </div>
          </div>
        </p>
      </div>  
    </div>
  </div>
</div>


